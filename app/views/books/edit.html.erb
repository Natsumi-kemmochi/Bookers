<h2>Editing Book</h2>


<% if @book.errors.any? %>
<table class="error_message">
    <tr>
      <th>
      <%= @book.errors.count %>errors prohibited this book from being saved:
      </th>
    </tr>
  
    <tr>
      <td>
        <ul> 
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
      </ul>
      </td>
    </tr>
</table>
<% end %>






<%= form_with model: @book do |f| %>
<br>

<h4>Title</h4>
<%= f.text_field :title %>
<br>
<br>
<h4>Body</h4>
<%= f.text_area :body %>
<br>
<%= f.submit 'Update Book' %>

<% end %>

