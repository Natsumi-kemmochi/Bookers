<body>

<h1>Books</h1>

<table class="box">
  
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <span>
        <td><%= book.title %></td>
      　<td><%= book.body %></td>
      　<td><%= link_to 'Show', books_path %></td>
      　<td><%= link_to 'Edit', books_path %></td>
      　<td><%= link_to 'Destroy', books_path %></td>
      </span>
    </tr>
    <% end %>
   </tbody>
    
</table>




<div class="new">
  <h2>New book</h2>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
  
    <h4>Body</h4>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Create Book' %>
</div>
  
<% end %>

</body>
